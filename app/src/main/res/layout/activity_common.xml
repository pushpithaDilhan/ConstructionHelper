<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pushpitha.constructionhelper.CommonActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_common"
        android:layout_weight="0.92" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="             m   "
            android:id="@+id/textView8" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_mc"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="             n    "
            android:id="@+id/textView9" />

        <EditText
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_nc"
            android:inputType="number"
            android:layout_weight="0.47"
            android:allowUndo="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="  Thickness "
            android:id="@+id/textView12" />

        <EditText
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_tc"
            android:layout_weight="0.47"
            android:inputType="number"
            android:allowUndo="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:paddingTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="             Area    "
            android:id="@+id/textView10" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView_areac" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:layout_weight="0.04">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="             Volume    "
            android:id="@+id/textView11" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView_volumeh" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Area    "
            android:id="@+id/button_areac"
            android:layout_weight="0.18" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume"
            android:id="@+id/button_volumec"
            android:nestedScrollingEnabled="true"
            android:layout_weight="0.30" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/button_nextc"
            android:layout_weight="0.52" />
    </LinearLayout>


</LinearLayout>
