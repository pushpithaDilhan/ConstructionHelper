<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pushpitha.constructionhelper.rect">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/rectangle2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="n"
        android:id="@+id/txt_n"
        android:layout_above="@+id/editText_t"
        android:layout_alignLeft="@+id/editText_t"
        android:layout_alignStart="@+id/editText_t"
        android:layout_marginLeft="45dp" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_mc"
        android:layout_below="@+id/imageView2"
        android:layout_alignRight="@+id/txt_thick"
        android:layout_alignEnd="@+id/txt_thick" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_nc"
        android:layout_alignTop="@+id/editText_mc"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_t"
        android:layout_below="@+id/editText_nc"
        android:layout_alignRight="@+id/editText_nc"
        android:layout_alignEnd="@+id/editText_nc"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Thickness"
        android:id="@+id/txt_thick"
        android:layout_alignBottom="@+id/editText_t"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Area  "
        android:id="@+id/button_area1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="m"
        android:id="@+id/textView5"
        android:layout_above="@+id/editText_t"
        android:layout_alignRight="@+id/button_area1"
        android:layout_alignEnd="@+id/button_area1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="  Area  "
        android:id="@+id/textView6"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/txt_thick"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Volume"
        android:id="@+id/textView7"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume"
        android:id="@+id/button_vol1"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Next  "
        android:id="@+id/button_next1"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editText_nc"
        android:layout_alignStart="@+id/editText_nc" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_area"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/textView_volume"
        android:layout_alignStart="@+id/textView_volume" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_volume"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/txt_thick"
        android:layout_toEndOf="@+id/txt_thick" />

</RelativeLayout>
