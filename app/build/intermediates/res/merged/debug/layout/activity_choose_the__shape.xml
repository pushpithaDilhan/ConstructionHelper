<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_weight="3"
    tools:context="com.example.pushpitha.constructionhelper.Choose_the_Shape"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rowCount="4"
        android:columnCount="14">

        <ImageButton
            android:layout_width="172dp"
            android:layout_height="180dp"
            android:id="@+id/circle"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/circle"
            android:contextClickable="false"
            android:clickable="true" />

        <ImageButton
            android:layout_width="172dp"
            android:layout_height="180dp"
            android:id="@+id/rectangle"
            android:layout_row="1"
            android:layout_column="13"
            android:src="@drawable/rectangle"
            android:clickable="true" />

        <ImageButton
            android:layout_width="172dp"
            android:layout_height="180dp"
            android:id="@+id/parallelogram"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/parallelogram"
            android:clickable="true" />

        <ImageButton
            android:layout_width="172dp"
            android:layout_height="180dp"
            android:id="@+id/bulletshape"
            android:layout_row="2"
            android:layout_column="13"
            android:src="@drawable/bulletshape"
            android:clickable="true" />

        <ImageButton
            android:layout_width="172dp"
            android:layout_height="180dp"
            android:id="@+id/oval"
            android:layout_row="3"
            android:layout_column="1"
            android:src="@drawable/oval"
            android:clickable="true" />

        <ImageButton
            android:layout_width="172dp"
            android:layout_height="180dp"
            android:id="@+id/houseshape"
            android:layout_row="3"
            android:layout_column="13"
            android:src="@drawable/houseshape"
            android:clickable="true" />
    </GridLayout>
</RelativeLayout>
